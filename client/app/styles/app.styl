//auth
input
	width 70%
	height 40px
	background-color #E7F0F7
	margin-bottom 10px
	border none
	border-bottom solid 1px #DEE5EF
	color #2D333F
	padding-left 5%
	border-radius 2px
	transition background ease-out .4s,border ease-out .4s;

#submitButton
	display block

#submitButton img
	height 60%

input[type=text]:focus,input[type=password]:focus
	border none
	outline none
	border-bottom solid 2px #47AEFD
	background-color rgba(232,240,248,.25)

.button
	display none
	margin auto
	width 70%
	height 40px
	background-color #33A6FF
	margin-top 10px
	margin-bottom 10px
	color white
	border-radius 2px
	transition background ease-out .4s
	text-transform uppercase
	border none

.button:hover
	background-color: #008af5;

#authStatus
	margin-bottom 10px