//auth
input
	width 70%
	height 40px
	background-color #E7F0F7
	margin-bottom 10px
	border none
	border-bottom solid 1px #DEE5EF
	color #2D333F
	padding-left 5%
	border-radius 2px
	transition background ease-out .4s,border ease-out .4s;

#submitButton
	display block

#submitButton img
	height 60%

#spinner
	height 1.2em
	color red
	margin-left 0.4em

input[type=text]:focus,input[type=password]:focus
	border none
	outline none
	border-bottom solid 2px #47AEFD
	background-color rgba(232,240,248,.25)

.button
	display none
	margin auto
	width 70%
	height 40px
	background-color #33A6FF
	margin-top 10px
	margin-bottom 10px
	color white
	border-radius 2px
	transition background ease-out .4s
	text-transform uppercase
	border none

.button:hover
	background-color: #008af5;

#authStatus
	margin-bottom 10px

//Rejouabilit√©
#modalBackground
	display none
	position fixed
	opacity 0.9
	height 100%
	width 100%
	top 0
	left 0
	z-index 10
	background-color rgba(50, 50, 50, 0.901961)

#replayOp
	z-index 11
	display none
	position fixed
	top 0
	left 0
	width 60vw
	//height 35vh
	margin 15vh 27vw
	background #FFF
	border-radius 25px
	box-shadow: 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23)

#replayTitle
	margin-top 0.5em
	font-size 2.0em

#replayOp ul
	display block

#replayOp ul li
	margin auto
	margin-top 10px
	margin-bottom 10px
	//padding-top 10px
	//padding-bottom 10px
	display block
	width 60%
	height 2em
	line-height 2em
	background-color #33A6FF
	color white
	border-radius 2px
	text-transform uppercase
	border none
	cursor pointer
	transition background-color 0.2s ease, height 0.5s ease

#replayOp ul li:hover, #replayOp ul li#raz:hover
	background-color #ff850a

#replayOp ul li#raz
	background-color red

#replayOp ul li.inactive, #replayOp ul li#raz.inactive
	background-color grey
	cursor not-allowed
	//height 0px

#replayOp ul li.active
	background-color #ffB53a
	cursor wait
	//height 0px

#close
	color black
	font-size 2em
	position absolute
	top 10px
	right 2%
	cursor pointer

#close.closeInactive
	color gray
	cursor not-allowed