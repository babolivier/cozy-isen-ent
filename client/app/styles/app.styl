
@import '_sidebar'

html
	height     100%
	font-size  16px

body
	height     100%
	background #f4f4f4
	font-size  16px

	@media (max-width: 767px)
		padding 0 !important

	@media (max-width: 480px)
		padding 0 !important

li,
span
	a,
	a:hover,
	a:visited,
	a:focus
		text-decoration none

#content
	height 100%
	font-family "Source Sans Pro","Helvetica Neue",Helvetica,Arial,sans-serif;
	overflow hidden

iframe
	height      100vh
	width       calc(100% - 3.6rem)
	margin-left 3.6rem
	border      none

#home
	text-align center

// errors
#errors
	opacity 0
	position fixed
	margin 10% 30%
	width 40%
	background white
	border solid 1px #5ca3f9
	box-shadow 0 0 10px

#errors.on-error
	display block
	animation errorShow 1s ease both

#errors.off-error
	animation errorHide 1s ease both

#errors p:first-child
	background-color #5ca3f9
	font-size 1.3em
	color white
	padding-left 6px

#errorText
	text-align center

#closeError
	background #5ca3f9
	display block
	color white
	font-size 1.2em
	width 2em
	text-align center
	position absolute
	right 0.1em
	bottom 0.1em
	transition background-color 0.2s ease
	cursor pointer

#closeError:hover
	background #ff850a

@keyframes errorShow
	from
		opacity 0
		transform translateY(-50%)
	to
		opacity 1
		transform translateY(0)

@keyframes errorHide
	from
		opacity 1
		transform translateY(0)
	100%
		opacity 0
		transform translateY(50%)
